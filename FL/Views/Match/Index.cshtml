@using GridMvc.Html
@model IEnumerable<Domain.Entities.Match>

@{
    ViewBag.Title = "Mecze";
}

<h2>Mecze</h2>

<p>
    <a href="@Url.Action("Create", "Match")" class="btn btn-success">
       Dodaj
        
    </a>
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            Gospodarze
        </th>
        <th>
            Goście
        </th>
        <th>
            Wynik
        </th>


    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HomeClub.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AwayClub.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HomeGoals) : @Html.DisplayFor(modelItem => item.AwayGoals)
            </td>

            <td>
                @*@Html.ActionLink("Edit", "Edit", new {id = item.MatchId}) |*@
                @Html.ActionLink("Szczegóły", "Details", "Match", new{id = item.MatchId}, new {@class="btn btn-info"})
                    
</td>
        </tr>
    }

</table>


