@model Domain.Entities.Match

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Match</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.Label("Gospodarze: ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("HomeClubId", String.Empty)
                @Html.ValidationMessageFor(model => model.HomeClubId)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Goście: ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("AwayClubId", String.Empty)
                @Html.ValidationMessageFor(model => model.AwayClubId)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Bramki gospodarzy: ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.HomeGoals)
                @Html.ValidationMessageFor(model => model.HomeGoals)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Bramki gości: ", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AwayGoals)
                @Html.ValidationMessageFor(model => model.AwayGoals)
            </div>
        </div>

       

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
